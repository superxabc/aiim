# 生产环境配置示例
# 复制此文件为 .env.prod 并填入真实值

# 数据库配置
POSTGRES_USER=aiim
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=aiim_db

# JWT配置 (务必修改为强密码)
JWT_SECRET=your_very_strong_jwt_secret_here_minimum_32_characters

# 服务配置
INSTANCE_ID=aiim-prod-1
RATE_LIMIT_PER_SEC=50

# 阿里云OSS配置
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY=your_oss_access_key
OSS_SECRET_KEY=your_oss_secret_key
OSS_BUCKET_NAME=aiim-media-prod

# 媒体配置
MEDIA_MAX_FILE_SIZE=104857600  # 100MB
MEDIA_URL_EXPIRE_SECONDS=3600

# STUN/TURN配置 (WebRTC)
STUN_SERVERS=stun:stun.l.google.com:19302,stun:your-turn-server.com:3478
TURN_SERVER=turn:your-turn-server.com:3478
TURN_USERNAME=your_turn_username
TURN_PASSWORD=your_turn_password
TURN_CREDENTIAL_TTL=300
